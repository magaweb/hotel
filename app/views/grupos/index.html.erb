<p id="notice"><%= notice %></p>

<h1>Lista de grupos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grupos.each do |t| %>
      <tr>
        <td><%= t.nome %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_grupo_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grupo', new_grupo_path %>
